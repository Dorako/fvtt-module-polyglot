<form class="flexcol" autocomplete="off" onsubmit="event.preventDefault()">
	<section class="content">
		<div class="settings-list">
			<ul class="polyglot-languages-list">
				<li class="flexrow">
					<div class="font-name">{{localize "POLYGLOT.Font"}}</div>
					<div class="fontSize">{{localize "POLYGLOT.FontSize"}}</div>
					<div class="polyglot-alphabet">ABCDEFGHIJKLMNOPQRSTUVWXYZ</div>
				</li>
				<hr />
				{{#each fontSize as |font alphabet|}}
					<li class="flexrow">
						<div class="font-name">{{alphabet}}</div>
						<div class="fontSize">
							<input class="selectatr" type="number" value="{{font}}" min="100" max="350" step="10" />
						</div>
						<div class="polyglot-alphabet" style="font-size: {{font}}%; font-family: {{alphabet}}">ABCDEFGHIJKLMNOPQRSTUVWXYZ</div>
					</li>
				{{/each}}
			</ul>
		</div>
	</section>

	<footer class="sheet-footer flexrow">
		<button type="submit" name="submit">
			<i class="far fa-save"></i>
			{{localize "SETTINGS.Save"}}
		</button>
		<button type="button" data-action="reset">
			<i class="fas fa-undo"></i>
			{{localize "SETTINGS.Reset"}}
		</button>
	</footer>
</form>